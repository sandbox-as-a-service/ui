{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "moduleResolution": "bundler",
    "declarationMap": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2022",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/components/ui/**/*", "src/lib/**/*"],
  "exclude": [
    "src/components/ui/**/*.test.tsx",
    "src/components/ui/**/*.stories.tsx"
  ]
}
